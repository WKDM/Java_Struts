<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>CookieProject</display-name>
  <!-- 配置Servlet信息 -->
  <servlet>
  	<servlet-name>ck1</servlet-name><!-- 定义Servlet名字 -->
  	<servlet-class>cookieservlet.CookieDemo01</servlet-class><!-- 指定Servlet的完全限定名 -->
  </servlet>
  <!-- 配置映射路径 -->
  <servlet-mapping>
  	<!-- 必须与前面servlet-name中定义的servlet名字保持一致 -->
  	<servlet-name>ck1</servlet-name>
  	<!-- 指定Servlet访问路径 -->
  	<url-pattern>/ck</url-pattern>
  </servlet-mapping>
</web-app>